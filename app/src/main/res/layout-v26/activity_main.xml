<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background1">

    <EditText
        android:id="@+id/Main_password"
        android:layout_width="250dp"
        android:layout_height="59dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="48dp"
        android:autofillHints=""
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="@font/nunito_sans_extralight"
        android:hint="@string/enter_password"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#FF7A7A7A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_email" />

    <Button
        android:id="@+id/Main_login"
        android:layout_width="122dp"
        android:layout_height="52dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button"
        android:text="@string/login"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Main_password" />

    <Button
        android:id="@+id/Main_Register"
        android:layout_width="122dp"
        android:layout_height="52dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button"
        android:text="@string/register"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/Main_login"
        app:layout_constraintTop_toBottomOf="@+id/Main_password" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="184dp"
        android:layout_marginTop="128dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Main_password" />

    <EditText
        android:id="@+id/main_email"
        android:layout_width="250dp"
        android:layout_height="59dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="196dp"
        android:autofillHints=""
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="@font/nunito_sans_extralight"
        android:hint="@string/enter_email"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#7A7A7A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="382dp"
        android:layout_height="95dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/nunito_sans_extralight"
        android:text="How comp ready are you?"
        android:textColor="#FFFFFF"
        android:textStyle="normal|bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="229dp"
        android:layout_height="38dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/nunito_sans_extralight"
        android:text="check yourself !"
        android:textColor="#FFFFFF"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>